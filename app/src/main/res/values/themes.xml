<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PauseApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:itemBackground">@color/button_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/feather_bold</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonOne" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="shapeAppearanceOverlay">@style/CustomButtonShape</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">60dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">35dp</item>
    </style>
    <style name="CustomButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">25dp</item>
    </style>
    <style name="ImageButtonOne" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="backgroundTint">@color/imagebutton_background</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">15dp</item>
    </style>
    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/button_background</item>
        <item name="android:itemBackground">@color/button_background</item>
    </style>
    <style name="BottomNavText">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/feather_bold</item>
    </style>
    <style name="ConfigurationButton" parent="Widget.MaterialComponents.Button">
        <item name="android:foreground">@drawable/configuration_border</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TriangleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_triangle</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>