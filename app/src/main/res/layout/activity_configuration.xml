<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurationActivity"
    android:background="@color/general_background"
    >
    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/nestedScrollView"
        android:layout_marginEnd="40dp"
        style="@style/ButtonOne"
        android:text="@string/ok"
        android:textSize="15sp"
        android:padding="20dp"
        android:layout_marginTop="50dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/okButton"
        app:layout_constraintBottom_toTopOf="@id/exitButtonConfiguration"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp"
            >

        <TextView
            android:id="@+id/cuentaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cuenta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            />

        <Button
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:id="@+id/preferenciasButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/ConfigurationButton"
            android:text="@string/preferencias"
            android:background="@color/imagebutton_background"
            app:layout_constraintTop_toBottomOf="@id/cuentaTextView"
            app:layout_constraintStart_toStartOf="@id/cuentaTextView"/>

        <Button
            android:textSize="17sp"
            android:layout_marginTop="20dp"            android:id="@+id/perfilButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/ConfigurationButton"
            android:text="@string/perfil"
            android:background="@color/imagebutton_background"
            app:layout_constraintTop_toBottomOf="@id/preferenciasButton"
            app:layout_constraintStart_toStartOf="@id/preferenciasButton"/>

        <Button
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:id="@+id/notiButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/ConfigurationButton"
            android:text="@string/notificaciones"
            android:background="@color/imagebutton_background"
            app:layout_constraintTop_toBottomOf="@id/perfilButton"
            app:layout_constraintStart_toStartOf="@id/preferenciasButton"/>

        <Button
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:id="@+id/privacidadButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/ConfigurationButton"
            android:text="@string/ajustes_de_privacidad"
            android:background="@color/imagebutton_background"
            app:layout_constraintTop_toBottomOf="@id/notiButton"
            app:layout_constraintStart_toStartOf="@id/preferenciasButton"/>

        <TextView
            android:id="@+id/soporteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soporte"
            app:layout_constraintTop_toTopOf="@id/privacidadButton"
            app:layout_constraintStart_toStartOf="@id/cuentaTextView"
            android:layout_marginTop="140dp"
            android:textSize="24sp"
            />

        <Button
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:id="@+id/centroAyudaButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/ConfigurationButton"
            android:text="@string/centro_de_ayuda"
            android:background="@color/imagebutton_background"
            app:layout_constraintTop_toBottomOf="@id/soporteTextView"
            app:layout_constraintStart_toStartOf="@id/soporteTextView"/>

        <Button
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:id="@+id/sugerenciasButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/ConfigurationButton"
            android:text="@string/sugerencias"
            android:background="@color/imagebutton_background"
            app:layout_constraintTop_toBottomOf="@id/centroAyudaButton"
            app:layout_constraintStart_toStartOf="@id/soporteTextView"/>

            <TextView
                android:id="@+id/terminos"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/terminos"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@id/sugerenciasButton"
                app:layout_constraintStart_toStartOf="@id/sugerenciasButton"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:id="@+id/privacidadPoliticas"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                app:layout_constraintTop_toBottomOf="@id/terminos"
                app:layout_constraintStart_toStartOf="@id/sugerenciasButton"
                android:layout_marginTop="20dp"
                android:textSize="19sp"
                />

            <TextView
                android:id="@+id/agradecimientos"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/agradecimientos"
                app:layout_constraintTop_toBottomOf="@id/privacidadPoliticas"
                app:layout_constraintStart_toStartOf="@id/sugerenciasButton"
                android:layout_marginTop="20dp"
                android:textSize="19sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/exitButtonConfiguration"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginBottom="100dp"
        style="@style/ButtonOne"
        android:text="@string/salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>